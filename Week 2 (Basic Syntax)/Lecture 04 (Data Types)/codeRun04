	'''
	print(text)
	return text




def dataTypeQuiz01():
	quiz04Question01()
	userInput = input("What is your answer? : ")
	if userInput.lower().strip() != "c":
		dataTypeQuiz01()

def dataTypeQuiz02():
	quiz04Question02()
	userInput = input("What is your answer? : ")
	if userInput.lower().strip() != "b":
		dataTypeQuiz02()

def dataTypeQuiz03():
	quiz04Question03()
	userInput = input("What is your answer? : ")
	if userInput.lower().strip() != "c":
		dataTypeQuiz03()

def dataTypeQuiz04():
